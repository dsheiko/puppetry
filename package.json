{
  "name": "puppetry",
  "description": "Puppetry - codeless end-to-end test automation, integrated with CI/CD pipeline",
  "version": "1.1.0-aplha.1",
  "author": "Dmitry Sheiko <me@dsheiko.com> (http://dsheiko.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/dsheiko/puppetry"
  },
  "bugs": {
    "url": "https://github.com/dsheiko/puppetry/issues",
    "email": "me@dsheiko.com"
  },
  "maintainers": [
    "Dmitry Sheiko <me@dsheiko.com> (http://dsheiko.com)"
  ],
  "engines": {
    "node": ">=9.0.0"
  },
  "main": "./app/main.js",
  "scripts": {
    "test": "jest --config=jest.cfg.unit.js",
    "test:e2e": "jest --config=jest.cfg.e2e.js --runInBand",
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --watch  --config webpack.config.js",
    "pack": "electron-builder --dir",
    "dist:all": "build -mwl -c.mac.identity=null",
    "dist": "build --linux snap",
    "start": "cross-env ELECTRON_ENV=dev electron .",
    "start:clean": "cross-env ELECTRON_ENV=dev PUPPETRY_CLEAN_START=true electron .",
    "lint": "eslint --ext=js,jsx ./src",
    "lint:fix": "eslint --ext=js,jsx --fix ./src",
    "preversion": "npm run lint && npm run test && npm run build",
    "postversion": "git push && git push --tags",
    "publish:snapcraft": "snapcraft push dist/puppetry-linux-v$npm_package_version-amd64.snap --release stable"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/runtime": "^7.1.2",
    "ansi-to-html": "^0.6.10",
    "antd": "^3.11.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "balloon-css": "^0.5.0",
    "chokidar": "^2.0.4",
    "classnames": "^2.2.6",
    "cross-env": "^5.2.0",
    "custom-error-instance": "^2.1.1",
    "electron-context-menu": "^0.10.0",
    "electron-log": "^2.2.17",
    "hotkeys-js": "^3.3.8",
    "immutability-helper": "^2.8.1",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lodash.debounce": "^4.0.8",
    "npm": "^6.4.1",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^5.0.1",
    "react-dom": "^16.5.2",
    "react-hot-keys": "^1.2.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.1",
    "redux-actions": "^2.6.3",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.3.0",
    "semver": "^5.6.0",
    "shelljs": "^0.8.2",
    "uniqid": "^5.0.3",
    "validate": "^4.5.1",
    "xml2js": "^0.4.19"
  },
  "license": "(GPL-3.0 OR MIT)",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "electron": "^3.0.5",
    "electron-builder": "^20.38.3",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.7.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "esprima": "^4.0.1",
    "live-plugin-manager": "^0.12.0",
    "redux-devtools-extension": "^2.13.5",
    "regenerator-runtime": "^0.12.1",
    "spectron": "^5.0.0",
    "style-loader": "^0.23.1",
    "tmp-promise": "^1.0.5",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2"
  },
  "keywords": [
    "browser",
    "puppetry",
    "puppeteer",
    "automation",
    "end-to-end",
    "e2e",
    "integration",
    "test",
    "testing",
    "runner"
  ],
  "build": {
    "appId": "com.dsheiko.puppetry",
    "productName": "puppetry",
    "compression": "normal",
    "artifactName": "${name}-${os}-v${version}-${arch}.${ext}",
    "directories": {
      "buildResources": "app/assets"
    },
    "files": [
      "app",
      "jest-pkg",
      "project-demo"
    ],
    "asar": true,
    "asarUnpack": [
      "jest-pkg/**/*",
      "project-demo/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${name}Setup-${os}-v${version}-${arch}.${ext}"
    },
    "appImage": {
      "description": "App to build end-to-end automation tests without a line of code",
      "category": "Development"
    },
    "snap": {
      "grade": "stable",
      "summary": "Puppetry - codeless end-to-end test automation"
    },
    "linux": {
      "category": "Development",
      "target": [
        {
          "target": "appImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "executableName": "puppetry"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
